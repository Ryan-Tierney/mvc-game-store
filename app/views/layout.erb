  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>Video Game Reserve Store</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />
  </head>
  <body>
    <nav>
      <% if logged_in? %>
        
        <p><h1>Welcome, <%= current_user.username %></h1></p>
        <a href = "/games/new"><h2>Reserve a Game</h2></a>
        <a href = "/games"><h2>View All Your Currently Reserved Games</h2></a>
        <a href = "/logout"><h2>Log Out</h2></a>

      <% else %>
        <a href = "/signup"><h2>Sign Up</h2></a> <br> 
        <a href = "/login"><h2>Log In<h2></a>
      <% end %>
    </nav>
    
    <div class="wrapper">

        <%= yield %>

      <footer class="branding">
        <small>&copy; 2019 <strong>MvcGameStore</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    
