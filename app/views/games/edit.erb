<h1>Edit <%= @game.name %></h1>

<form method = "post" action = "/games/<%= @game.id %>">
  <label>Game Name</label>
  <input type = "text" name = "name" value = "<%= @game.name %>"> <br> 
  
  <label>Game Rating (E / T / M)</label>
  <input type = "text" name = "rating" value = "<%= @game.rating %>"> <br> 
  
  <input type = "submit" value = "Update">
</form>